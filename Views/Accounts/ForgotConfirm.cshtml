@{
    ViewData["Title"] = "Forgot Password Confirmation Page";
}

@model WebAdvert.Web.Models.Accounts.ForgotConfirmModel;

<div class="row">
    <div class="col-md-4">
        <h4>Forgot Password Confirmation</h4>
        <form method="post" asp-controller="Accounts" asp-action="ForgotConfirm">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="VerificationCode"></label>
                <input asp-for="VerificationCode" class="form-control" />
                <span asp-validation-for="VerificationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit">Set Password</button>
            </div>
        </form>
    </div>
</div>